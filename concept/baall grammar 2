PROGRAM -> IMPORT STATEMENT EXPORT

IMPORT -> "use" _STRING_PRIMITIVE ";" IMPORT | _EPSILON

STATEMENT -> ASSIGNMENT ";" STATEMENT | EXPRESSION ";" STATEMENT | CONTROL_STRUCTURES STATEMENT | _EPSILON

ASSIGNMENT -> DECLARATION | REASSIGNMENT

DECLARATION -> TYPE ":" IDENTIFIER "=" EXPRESSION | TYPE ":=" EXPRESSION

REASSIGNMENT -> TYPE "=" EXPRESSION

EXPRESSION -> ARRAY_CREATION | STRUCT_CREATION | FUNCTION_CREATION | EVALUABLE

ARRAY_CREATION -> "[" "]" | "[" EXPRESSION ARRAY_ELEMENTS "]"

ARRAY_ELEMENTS -> "," EXPRESSION ARRAY_ELEMENTS | _EPSILON

STRUCT_CREATION -> "(" FIELD FIELD_LIST ")"

FUNCTION_CREATION -> "{" FUNCTION_BODY "}" | FIELD_LIST "{" FUNCTION_BODY "}"

FIELD_LIST -> "," FIELD_LIST | _EPSILON

FIELD -> TYPE ":" IDENTIFIER

FUNCTION_BODY -> STATEMENT "return" VALUE

EVALUABLE -> "(" VALUE OPERATION_SERIES ")" | VALUE OPERATION_SERIES | VALUE OPTIONAL_UNARY_OPERATION

OPTIONAL_UNARY_OPERATION -> UNARY_OPERATOR | _EPSILON

OPERATION_SERIES -> BINARY_OPERATOR VALUE OPERATION_SERIES | _EPSILON

VALUE -> PRIMITIVE | ARRAY_CREATION | IDENTIFIER | FUNCTION_CALL

FUNCTION_CALL -> IDENTIFIER "(" ")" | IDENTIFIER "(" VALUE PARAMETER_LIST ")"

PARAMETER_LIST -> "," PARAMETER_LIST | _EPSILON

PRIMITIVE -> _STRING_PRIMITIVE | _NUMBER_PRIMITIVE | _BOOLEAN_PRIMITIVE

CONTROL_STRUCTURES -> CONDITIONAL | FOR_LOOP | WHILE_LOOP

CONDITIONAL -> EVALUABLE "?" "{" STATEMENT "}" ELSE_BLOCK

ELSE_BLOCK -> "\|" "{" STATEMENT "}" |  "\|" EVALUABLE "{" STATEMENT "}" ELSE_BLOCK

FOR_LOOP -> IDENTIFIER "=" EVALUABLE ".." EVALUABLE OPTIONAL_FOR_INCREMENTOR  "{" STATEMENT "}"

OPTIONAL_FOR_INCREMENTOR -> "::" EVALUABLE | _EPSILON

WHILE_LOOP -> "while" EVALUABLE "{" STATEMENT "}"

EXPORT -> "export" "{" IDENTIFIER ADDITIONAL_EXPORTED_ELEMENTS "}"

ADDITIONAL_EXPORTED_ELEMENTS -> "," IDENTIFIER ADDITIONAL_EXPORTED_ELEMENTS | _EPSILON

BINARY_OPERATOR -> "+" | "-" | "*" | "/" | "%" | "&" | "\|" | "^" | "+=" | "-=" | "*=" | "/=" | "<<" | ">>" | "==" | "<" | ">"

UNARY_OPERATOR -> "++" | "--"

TYPE -> "string" | "number" | "boolean" | "struct" | IDENTIFIER
